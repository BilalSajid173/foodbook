<%- include("partials/header.ejs") %>

    <link rel="stylesheet" href="/css/edit-profile.css">
    <link rel="stylesheet" href="/css/user-nav.css">
    <link rel="stylesheet" href="/css/footer.css">

    <%- include("partials/user-nav.ejs") %>

        <div class="wrapper-edit-profile container-fluid">

            <div class="edit-profile-form">

                <h2>Update Your Details.</h2>
                <form action="/edit-profile" method="POST">
                    <div class="name">
                        <label for="#name">Name:</label>
                        <input type="text" name="name" id="name" required autocomplete="off" value="<%=user.name%>">
                    </div>
                    <div class="email">
                        <label for="#email">Email:</label>
                        <input type="email" name="username" id="email" required autocomplete="off"
                            value="<%=user.username%>">
                    </div>
                    <div class="address">
                        <label for="#address">Address:</label>
                        <input type="text" name="address" id="address" autocomplete="off" value="<%=user.address%>">
                    </div>
                    <div class="age">
                        <label for="#age">Age:</label>
                        <input type="number" name="age" id="age" autocomplete="off" value="<%=user.age%>">
                    </div>
                    <div class="phone">
                        <label for="#phone">Phone:</label>
                        <input type="number" name="phone" id="phone" autocomplete="off" value="<%=user.phoneNum%>">
                    </div>
                    <div class="hobbies">
                        <label for="#hobbies">Hobbies:</label>
                        <input type="text" name="hobbies" id="hobbies" autocomplete="off" value="<%=user.hobbies%>">
                    </div>
                    <div class="about">
                        <label for="about">About:</label>
                        <textarea name="about" id="about" autocomplete="off" rows="5"><%=user.about%></textarea>
                    </div>
                    <div class="d-grid gap-2 col-3 mx-auto">
                        <button type="submit" class="btn btn-outline-primary btn-lg">Update</button>
                    </div>
                </form>
            </div>
        </div>


        <%- include("partials/footer.ejs") %>