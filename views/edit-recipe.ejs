<%- include("partials/header.ejs") %>

    <link rel="stylesheet" href="/css/edit-recipe.css">
    <link rel="stylesheet" href="/css/user-nav.css">
    <link rel="stylesheet" href="/css/footer.css">

    <%- include("partials/user-nav.ejs") %>


        <div class="edit-recipe container-fluid">

            <h2>Update Recipe</h2>
            <form action="/edit-recipe" method="POST" enctype="multipart/form-data">

                <input type="hidden" name="recipeId" value="<%=recipe.id%>">
                <label for="#title">Name</label>

                <input type="text" name="title" id="title" placeholder="Name Of The Recipe" required
                    value="<%=recipe.name%>">

                <label for="#ingredients">Ingredients Required</label>
                <textarea name="ingredients" id="ingredients" rows="5" placeholder="Ingredients Required"
                    required><%=recipe.ingredients%></textarea>

                <label for="#description">Directions</label>
                <textarea name="description" id="description" rows="15" placeholder="How To Make"
                    required><%=recipe.desc%></textarea>

                <h4>Upload Images(Max 5, reupload will delete previous images)</h4>
                <input type="file" name="recipe-images" multiple id="recipe-img">

                <button name="submit-btn" class="btn btn-outline-success btn-lg" type="submit">Update</button>
            </form>

        </div>











        <%- include("partials/footer.ejs") %>