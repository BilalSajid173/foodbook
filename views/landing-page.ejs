<%- include("partials/header.ejs") %>

    <link rel="stylesheet" href="/css/landing-page.css">
    <link rel="stylesheet" href="/css/user-nav.css">
    <link rel="stylesheet" href="/css/footer.css">

    <%- include("partials/user-nav.ejs") %>

        <div class="profile-wrapper">
            <div class="profile-info">
                <h2>Welcome <%=user.name%>
                </h2>
                <p>Email: <%=user.username%>
                </p>
                <%if(user.phoneNum){%>
                    <p>Phone: <%=user.phoneNum%>
                    </p>
                    <%}%>
                        <%if(user.age){%>
                            <p>Age: <%=user.age%>
                            </p>
                            <%}%>
                                <%if(user.address){%>
                                    <p>Address: <%=user.address%>
                                    </p>
                                    <%}%>
                                        <%if(user.hobbies){%>
                                            <p>Hobbies: <%=user.hobbies%>
                                            </p>
                                            <%}%>
                                                <%if(user.about){%>
                                                    <p>
                                                        <%=user.about%>
                                                    </p>
                                                    <%}%>
            </div>
            <div class="user-buttons">
                <button class="d-grid gap-2 col-3 btn btn-outline-success btn-lg"><a href="/add-recipe">Add
                        recipe</a></button>
                <button class="d-grid gap-2 col-3 btn btn-outline-success btn-lg"><a href="/favourite-recipes">Favourites</a></button>
            </div>
        </div>

        <div class="my-recipes container-fluid">
            <h1>My Recipes</h1>
            <div class="user-recipes">
                <%if(recipes.length===0){%>
                    <h4>You don't have any recipes yet</h4>
                    <%} else {%>
                        <% recipes.forEach(recipe=> {%>

                            <div class="recipe-wrapper">
                                <a href="/recipes/<%=recipe.id%>">
                                    <div class="recipe-card">
                                        <div class="imagewrap">
                                            <img src="/uploaded-images/<%=recipe.imageNames[0]%> " alt="">
                                        </div>
                                        <h3>
                                            <%=recipe.name%>
                                        </h3>
                                    </div>
                                </a>
                                <div class="edit-btn">
                                    <a href="/edit-recipe/<%=recipe.id%>"><button type="submit"><i
                                                class="fa-solid fa-pen"></i></button></a>
                                </div>
                                <div class="delete-btn">
                                    <form action="/delete-recipe" method="post">
                                        <input type="hidden" name="recipeId" value="<%=recipe.id%>">
                                        <button type="submit"><i class="fa-solid fa-trash-can"></i></button>
                                    </form>
                                </div>

                            </div>

                            <%}) %>
                                <%}%>

            </div>
        </div>





        <%- include("partials/footer.ejs") %>